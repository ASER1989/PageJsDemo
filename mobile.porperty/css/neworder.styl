@import 'fn'
#neworder
  background #f1f3f6
  .head
   background #ffffff
   position fixed
   top 0
   left 0
   right 0
   h em(32)
  .page-top
    font-size em(12)
    h em(32)
    color #909090
    box-shadow 0 0 em(6) #d0d0d0
    padding 0 em(15)
    >img
      width em(14)
      vertical-align middle
      margin-right em(5)
    .idx-top-opt
      color #3f7bff
      font-size em(12)
    .idx-top-msg
      float right
      >img
        width em(26)
  .hide-item-box
    position relative
  .hide-houselist,.hide-item
    position absolute
    right 0
    top 0
    width em(92)
    height em(33)
    opacity 0
    border 0
    background #ffffff
  .ctx-form
    width em(300)
    margin em(45) auto 0 auto
    box-shadow 0 5px 10px #c0c0c0
    background-color #ffffff
    border-radius em(2)
    padding em(10) 0
  .ctx-form-item
    width em(270)
    margin 0 auto
    padding em(10) 0
    border-bottom solid 1px #e9e9e9
    line-height em(26)
    color #6b6b6b
    font-size em(13)
  .form-icon
    height: em(16)
    margin-top em(4)
    margin-right em(5)
    float left
  .form-icon-add
    width: em(21)
  .form-right
    float right
  .form-sel
    color #000000
    position relative
    font-weight 600
    &:after
      content ">"
  .form-textarea
    border: 0;
    resize: none;
    outline: 0;
    color: #333;
    overflow: hidden;
    height em(66)
    width em(250)
    margin-left em(20)
    padding-top em(10)
    font-size em(12)
  .form-input
    text-align right
    color #000000
    font-weight 600
  .form-submit
    width 100%
    text-align center
    padding-top em(20)
    >a
      display inline-block
      width em(170)
      h em(43)
      border-radius em(30)
      background-color #3f7bff
      color #ffffff
      text-align center
      font-size em(13)
      box-shadow 0 3px 10px #a0a0a0

@import 'fn'
#index
  background url(../img/img_head.png) no-repeat
  background-size 100% auto
  background-position 0 top
  padding-bottom em(26)
  .idx-top
    font-size em(12)
    h em(32)
    padding em(10) em(3) 0 em(3)
    color #f9f9f9
    >img
      width em(14)
      vertical-align middle
      margin-right em(5)
    .idx-top-opt
      color #c0c0c0
      font-size em(12)
      margin-left em(3)
    .idx-top-msg
      float right
      >img
        width em(26)
  .idx-block
    width em(290)
    margin 0 auto
  .idx-block-title
    color #717171
    font-size em(14)
    border-bottom solid em(1) #dcdcdc
    line-height em(30)
    font-weight 600
    padding em(10) em(3) 0 em(3)
    .idx-block-stitle
      font-weight normal
      font-size em(11)
      color #d4d4d4
    .idx-block-more
      color #737373
      font-weight normal
      font-size em(12)
      float right
      >img
        width em(5)
        margin-left em(3)
  .idx-btns
    width em(290)
    margin em(126) auto 0 auto
    background-color #ffffff
    padding em(7) 0 0 0
    box-shadow 0 0 10px #a0a0a0

  ul,li
    list-style none
  .idx-btn-list
    width 100%
    >li
      width 50%
      float left
      display block
      animation-duration 0.5s
      >img
        width 100%
  .idx-news
    animation-duration 0.5s
  .idx-news-first
    position relative
    width 100%
    height em(150)
    overflow hidden
    margin-top em(10)
    >img
      width 100%
    .title
      position absolute
      bottom 0
      left 0
      right 0
      background rgba(0, 0, 0, 0.5)
      font-size em(11)
      padding em(5) em(8)
      color #ffffff
  .idx-news-item
    padding em(10) 0
    border-bottom solid em(1) #dcdcdc
    color #707070
    display box
  .idx-news-txt
    box-flex 1
    display block
    height em(57)
    .news-title
      height em(40)
      line-height em(20)
      font-size em(12)
    .news-time
      h em(17)
      font-size em(10)
  .idx-news-img
    width em(85)
    height em(57)
    >img
      width em(85)

  .idx-shop
    color #0b0b0b
    font-size em(14)
    border-bottom solid em(1) #efefef
    line-height em(32)
    padding em(10) em(3) 0 em(3)
    >img
      height em(18)
      vertical-align middle
    .idx-shop-call
      color #737373
      font-weight normal
      font-size em(12)
      float right
      >img
        width em(28)
        margin-left em(3)
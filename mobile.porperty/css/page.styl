.form
  color #ffffff
  font-size em(12)
  display block
  width em(260)
  margin 0 auto
  .form-item
    line-height em(35)
    label
      width em(76)
      display inline-block
    input
      border 0
      border-radius 0
      height em(26)
      width em(180)
      padding em(1) em(3)
  .form-radio
    line-height em(32)
    >span
      width em(66)
    input
      width em(16)
      height em(16)
      border-radius em(16)
      background #ffffff
      -webkit-appearance:radio !important
      vertical-align middle
.form-submit
  width em(320)
  height em(68)
  >a
    display block
    width em(210)
    height em(50)
    margin em(37) auto 0 auto
    background-image url("../img/btn-save.png")
    background-repeat no-repeat
    background-size 100% auto
    background-position 0 bottom
    &:active
      background-image url("../img/btn-saved.png")
.page-box
  width em(280)
  margin 0 auto
  padding em(20) em(5)
  border solid em(1.5) #e7c588
  position relative
  background-color rgba(0, 0, 0, 0.23)
  p
    line-height em(26)
    font-size em(13)
    color #ffffff
    text-align justify
    &.indent
      text-indent em(28)
  .tag
    position absolute
    width em(19)
    height em(19)
    background-repeat no-repeat
    background-position 0 0
    background-size 100% auto
    &.tag-one
      left: em(-10)
      top:em(-10)
      background-image url(../img/tag_01.png)
    &.tag-two
      right: em(-10)
      top:em(-10)
      background-image url(../img/tag_02.png)
    &.tag-three
      left: em(-10)
      bottom:em(-10)
      background-image url(../img/tag_03.png)
    &.tag-four
      right: em(-10)
      bottom:em(-10)
      background-image url(../img/tag_04  .png)